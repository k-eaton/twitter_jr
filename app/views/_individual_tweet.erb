<div class="tweet_box">
<div>
  <img src="<%= tweet.user.image %>" width="50px" height="50px" />
</div>

<div>Date: <%= tweet.created_at.strftime('%b %d') %></div>

<div>By: <a href="/users/<%=tweet.user_id%>">@<%= tweet.user.handle %></a></div>


<div><%= erb :_favorites, locals: {tweet: tweet} %> </div>

<div> <%= tweet.content %></div>

<% if logged_in? %>
  <button class="btn btn-default" ><a href='/tweets/<%= tweet.id %>/reply'>Reply</a> </button>
  <button class="btn btn-default"><a href='/tweets/<%= tweet.id %>/retweet'>Retweet</a></button>
<% end %>
</div>
