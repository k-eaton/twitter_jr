<h1>Profile</h1>

<div class="profile_image">
  <img src="<%= @user.image %>" width="150px" height="150px" />
</div>

<div class="profile_name">
  Name: <%= @user.name %>
</div>

<div class="profile_handle">
  Handle: @<%= @user.handle %>
</div>

<% if current_user && current_user.id == @user.id %>
  <a href="/users/edit">Edit Profile</a>
<%end%>

<div class="profile_links">
  <ul>

    <li>Followers: <a href="/users/<%= @user.id %>/followers"><%=@user.followers.count %></a></li>
    <li>Followees: <a href="/users/<%= @user.id %>/followees"><%=@user.followees.count %></a></li>
    <li> <a href="/users/find">Find me some connections- I'm lonely</a></li>
    <% if current_user && current_user.id != @user.id %>
    <li><form action = "/users/<%=@user.id%>" method="post">
      <input type="submit" value= "<%= is_not_a_follower?(@user) ? 'Follow Me!!': 'Unfollow'%>">
    </form></li>
    <%end%>
  </ul>
</div>

<div class="profile_tweet">
  Tweets:
  <ul>
    <% @user.tweets.reverse_each do |tweet| %>
    <li><%= erb :_individual_tweet, locals: {tweet: tweet} %></li>
    <% end %>
  </ul>
</div>


